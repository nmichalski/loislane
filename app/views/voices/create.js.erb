<% if @voice.errors.blank? %>
  $('messages').insert('<%= escape_javascript(render(:partial => 'shared/bubble', :locals => {:bubble => @voice, :bubble_counter => @voice.commit.voices.count})) %>');
<% end %>

<%
  flash = {}
  if @voice.errors.blank?
    flash[:notice] = "Thanks! Your voice has been heard."
  else
    flash[:alert] = "Error! #{@voice.errors.full_messages.join(". ")}"
  end
%>

$(document.body).insert('<%= escape_javascript(render(:partial => 'shared/flash_messages', :locals => {:flash => flash})) %>');
